@using ObjectUtil.Common
@using ObjectUtil.Dictionary
@using CharmEvents.Database.Database
@model Wallets

@{
    ViewBag.Title = "编辑";
}

@section title
{
    <script type="text/javascript">
        $(document).ready(function () {
            //singer 选中变换class
            $('.form .left, .form input, .form textarea, .form select').focus(function () {
                $(this).parents('tr').addClass("over");
            }).blur(function () {
                $(this).parents('tr').removeClass("over");
            });

        });
    </script>
}

@Html.HeadBegin("编辑")
@Html.HeadEnd()


<!--- data op --->
<div id="data">
    @using (Html.BeginForm())
    {
        <table width="100%" border="0" cellspacing="0" class="table-data form">
            <!------------>
            <!--  -->
            <tr style="display:none;">
                <th width="20%">WId:</th>
                <td width="80%">
                    @Html.TextBoxFor(m => Model.WId, new { Class = "input", Size = "40" })
                    @Html.JQueryValidationMessage(j => j.Bind("WId").NotEmpty())
                </td>
            </tr>
            <!--  -->
            <tr>
                <th width="20%">UserId:</th>
                <td width="80%">
                    @Html.TextBoxFor(m => Model.UserId, new { Class = "input", Size = "40" })
                    @Html.JQueryValidationMessage(j => j.Bind("UserId").NotEmpty())
                </td>
            </tr>
            <!--  -->
            <tr>
                <th width="20%">AreaId:</th>
                <td width="80%">
                    @Html.TextBoxFor(m => Model.AreaId, new { Class = "input", Size = "40" })
                    @Html.JQueryValidationMessage(j => j.Bind("AreaId").NotEmpty())
                </td>
            </tr>
            <!--  -->
            <tr>
                <th width="20%">AvatarId:</th>
                <td width="80%">
                    @Html.TextBoxFor(m => Model.AvatarId, new { Class = "input", Size = "40" })
                    @Html.JQueryValidationMessage(j => j.Bind("AvatarId").NotEmpty())
                </td>
            </tr>
            <!--  -->
            <tr>
                <th width="20%">AvatarName:</th>
                <td width="80%">
                    @Html.TextBoxFor(m => Model.AvatarName, new { Class = "input", Size = "40" })
                    @Html.JQueryValidationMessage(j => j.Bind("AvatarName").NotEmpty())
                </td>
            </tr>
            <!--  -->
            <tr>
                <th width="20%">RecordDate:</th>
                <td width="80%">
                    @Html.TextBoxWithCalendar("RecordDate", DateTime.Now.AddDays(-1), new { Class = "input", Size = "40" }, "yy-mm-dd")
                    @Html.JQueryValidationMessage(j => j.Bind("RecordDate").NotEmpty())
                </td>
            </tr>
            <!--  -->
            <tr>
                <th width="20%">GetPoints:</th>
                <td width="80%">
                    @Html.TextBoxFor(m => Model.GetPoints, new { Class = "input", Size = "40" })
                    @Html.JQueryValidationMessage(j => j.Bind("GetPoints").NotEmpty().Min(1,"必须大于1"))
                </td>
            </tr>
            <!--  -->
            <tr>
                <th width="20%">BalancePoints:</th>
                <td width="80%">
                    @Html.TextBoxFor(m => Model.BalancePoints, new { Class = "input", Size = "40" })
                    @Html.JQueryValidationMessage(j => j.Bind("BalancePoints").NotEmpty().Min(1, "必须大于1"))
                </td>
            </tr>
            <!--  -->
            <tr>
                <th width="20%">Source:</th>
                <td width="80%">
                    @Html.TextBox("Source", "测试数据", new { Class = "input", Size = "40" })
                    @Html.JQueryValidationMessage(j => j.Bind("Source").NotEmpty())
                </td>
            </tr>
            <!--  -->
            <tr>
                <th width="20%">GetLastTime:</th>
                <td width="80%">
                    @Html.TextBoxWithCalendar("GetLastTime", DateTime.Now.AddDays(-1), new { Class = "input", Size = "40" }, "yy-mm-dd HH:mm:ss")
                    @Html.JQueryValidationMessage(j => j.Bind("GetLastTime").NotEmpty())
                </td>
            </tr>
            <tr>
                <th>&nbsp;</th>
                <td height="50" class="clear-form-td">
                    <input type="submit" class="bt-big" name="button2" id="button2" value="提  交" />
                    <input type="button" name="goback" class="bt-big" value="返  回" onclick="javascript:history.go(-1);" />
                </td>
            </tr>
            <!------------>
        </table>

    }

</div>
<!--- data ed --->
@Html.Foot()

