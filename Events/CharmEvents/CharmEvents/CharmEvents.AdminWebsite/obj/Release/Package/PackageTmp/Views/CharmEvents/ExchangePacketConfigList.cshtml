@using ObjectUtil.Common
@using ObjectUtil.Dictionary
@using CharmEvents.Database.Database
@model List<ExchangePacketConfig>

@{
    ViewBag.Title = "列表";
}

@section title
{
    <script type="text/javascript" src="@Url.Content("/Content/js/jquery.input.title.js")"></script>
    <script src="@Url.Content("/Content/js/jtip.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("/Content/js/jquery.table.js")"></script>
}

@Html.HeadBegin("列表")
@using (Html.BeginForm("ExchangePacketConfigList", "CharmEvents"))
{
    <text>
        <input type="hidden" name="PageIndex" value="1" />
        <input type="submit" value="搜索" class="bt-samll" />
        <input type="submit" value="导出Excel" name="btnExportExcel" class="bt-samll" />
    </text>
}
@Html.HeadEnd()

<!--- data op --->

<div id="data">
    <table width="100%" align="center" cellpadding="0" cellspacing="0" class="table-data list">
        <!-- 请程序注意 头部的jquery .list 已经变换成为特殊的 .list_cut ----------->
        <tr>
            <th>Id</th>
            <th>ExchangeId</th>
            <th>PacketId</th>
            <th>PacketName</th>
            <th>PacketDesc</th>
            <th>ExchangeLimit</th>
            <th>ExchangePoints</th>
            <th>ExchangeTypeId</th>
            <th>PacketCount</th>
            <th width="10%">操作</th>
        </tr>
        <!------------->
        @foreach (var item in Model)
        {

            <tr>

                <td>&nbsp; @item.Id</td>
                <td>&nbsp; @item.ExchangeId</td>
                <td>&nbsp; @item.PacketId</td>
                <td>&nbsp; @item.PacketName</td>
                <td>&nbsp; @item.PacketDesc</td>
                <td>&nbsp; @item.ExchangeLimit</td>
                <td>&nbsp; @item.ExchangePoints</td>
                <td>&nbsp; @item.ExchangeTypeId</td>
                <td>&nbsp; @item.PacketCount</td>
                <td>
                    <input type="button" class="bt-list" value="编辑" onclick="location.href='/CharmEvents/EditExchangePacketConfig?Id=@item.Id'" />
                    <input type="button" class="bt-list" value="删除" onclick="if(confirm('确定删除此项?'))location='/CharmEvents/DelExchangePacketConfig?ExchangeId=@item.ExchangeId'" />
                </td>
            </tr>
        }
    </table>

    <!--- page op --->
    <div id="page">
        @Html.Pager(new AdminButton("/CharmEvents/AddExchangePacketConfig", "增加"))
    </div>
    <!--- page ed --->

</div>
<!--- data ed --->
@Html.Foot()