@using ObjectUtil.Common
@using ObjectUtil.Dictionary
@using CampEvents.Database.Database
@model List<PointPacketConfig>

@{
    ViewBag.Title = "列表";
}

@section title
{
    <script type="text/javascript" src="@Url.Content("/Content/js/jquery.input.title.js")"></script>
    <script src="@Url.Content("/Content/js/jtip.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("/Content/js/jquery.table.js")"></script>
}

@Html.HeadBegin("列表")
@using (Html.BeginForm("PointPacketConfigsList", "CampEvents"))
{
    <text>
        <input type="hidden" name="PageIndex" value="1" />
        <input type="submit" value="搜索" class="bt-samll" />
        <input type="submit" value="导出Excel" name="btnExportExcel" class="bt-samll" />
    </text>
}
@Html.HeadEnd()

<!--- data op --->

<div id="data">
    <table width="100%" align="center" cellpadding="0" cellspacing="0" class="table-data list">
        <!-- 请程序注意 头部的jquery .list 已经变换成为特殊的 .list_cut ----------->
        <tr>
            <th>ConfigId</th>
            <th>ConfigContent</th>
            <th>PacketId</th>
            <th>PacketName</th>
            <th>NeedPoints</th>
            <th>CampId</th>
            <th>IsNotice</th>
            <th>ShowId</th>
            <th width="10%">操作</th>
        </tr>
        <!------------->
        @foreach (var item in Model)
        {

            <tr>

                <td>&nbsp; @item.ConfigId</td>
                <td>&nbsp; @item.ConfigContent</td>
                <td>&nbsp; @item.PacketId</td>
                <td>&nbsp; @item.PacketName</td>
                <td>&nbsp; @item.NeedPoints</td>
                <td>&nbsp; @item.CampId</td>
                <td>&nbsp; @item.IsNotice</td>
                <td>&nbsp; @item.ShowId</td>
                <td>
                    <input type="button" class="bt-list" value="编辑" onclick="location.href='/CampEvents/EditPointPacketConfig?ConfigId=@item.ConfigId'" />
                    <input type="button" class="bt-list" value="删除" onclick="if(confirm('确定删除此项?'))location='/CampEvents/DelPointPacketConfig?ConfigId=@item.ConfigId'" />
                </td>
            </tr>
        }
    </table>

    <!--- page op --->
    <div id="page">
        @Html.Pager(new AdminButton("/CampEvents/AddPointPacketConfig", "增加"))
    </div>
    <!--- page ed --->

</div>
<!--- data ed --->
@Html.Foot()