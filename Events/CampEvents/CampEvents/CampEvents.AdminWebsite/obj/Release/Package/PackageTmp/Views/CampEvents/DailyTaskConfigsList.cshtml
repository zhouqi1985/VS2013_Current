@using ObjectUtil.Common
@using ObjectUtil.Dictionary
@using CampEvents.Database.Database
@model List<DailyTaskConfig>

@{
    ViewBag.Title = "列表";
}

@section title
{
    <script type="text/javascript" src="@Url.Content("/Content/js/jquery.input.title.js")"></script>
    <script src="@Url.Content("/Content/js/jtip.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("/Content/js/jquery.table.js")"></script>
}

@Html.HeadBegin("列表")

@Html.HeadEnd()

<!--- data op --->

<div id="data">
    <table width="100%" align="center" cellpadding="0" cellspacing="0" class="table-data list">
        <!-- 请程序注意 头部的jquery .list 已经变换成为特殊的 .list_cut ----------->
        <tr>
            <th>TaskConfigId</th>
            <th>TaskName</th>
            <th>TaskDesc</th>
            <th>GetPoints</th>
            <th>MaxLimit</th>
            <th>WeekendDouble</th>
            <th>NumPerTime</th>
            <th width="10%">操作</th>
        </tr>
        <!------------->
        @foreach (var item in Model)
        {

            <tr>

                <td>&nbsp; @item.TaskConfigId</td>
                <td>&nbsp; @item.TaskName</td>
                <td>&nbsp; @item.TaskDesc</td>
                <td>&nbsp; @item.GetPoints</td>
                <td>&nbsp; @item.MaxLimit</td>
                <td>&nbsp; @item.WeekendDouble</td>
                <td>&nbsp; @item.NumPerTime</td>
                <td>
                    <input type="button" class="bt-list" value="编辑" onclick="location.href='/CampEvents/EditDailyTaskConfigs?TaskConfigId=@item.TaskConfigId'" />
                    <input type="button" class="bt-list" value="删除" onclick="if(confirm('确定删除此项?'))location='/CampEvents/DelDailyTaskConfigs?TaskConfigId=@item.TaskConfigId'" />
                </td>
            </tr>
        }
    </table>

    <!--- page op --->
    <div id="page">
        @Html.Pager(new AdminButton("/CampEvents/AddDailyTaskConfigs", "增加"))
    </div>
    <!--- page ed --->

</div>
<!--- data ed --->
@Html.Foot()