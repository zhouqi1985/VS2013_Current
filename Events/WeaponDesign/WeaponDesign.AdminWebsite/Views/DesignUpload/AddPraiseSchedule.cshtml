@using ObjectUtil.Common
@using ObjectUtil.Dictionary
@using WeaponDesign.Database.Database
@model PraiseSchedule

@{
    ViewBag.Title = "编辑";
}

@section title
{
    <script type="text/javascript">
        $(document).ready(function () {
            //singer 选中变换class
            $('.form .left, .form input, .form textarea, .form select').focus(function () {
                $(this).parents('tr').addClass("over");
            }).blur(function () {
                $(this).parents('tr').removeClass("over");
            });

        });
    </script>
}

@Html.HeadBegin("编辑")
@Html.HeadEnd()


<!--- data op --->
<div id="data">
    @using (Html.BeginForm())
    {
        <table width="100%" border="0" cellspacing="0" class="table-data form">
            <!------------>
            <!--  -->
            <tr style="display:none;">
                <th width="20%">ID:</th>
                <td width="80%">
                    @Html.TextBoxFor(m => Model.ID, new { Class = "input", Size = "40" })
                    @Html.JQueryValidationMessage(j => j.Bind("ID").NotEmpty())
                </td>
            </tr>
            <!--  -->
            <tr>
                <th width="20%">StartTS:</th>
                <td width="80%">
                    @Html.TextBoxWithCalendar("StartTS", null, new { Class = "input", Size = "40" }, "yy-mm-dd HH:mm:ss")
                    @Html.JQueryValidationMessage(j => j.Bind("StartTS").NotEmpty())
                </td>
            </tr>
            <!--  -->
            <tr>
                <th width="20%">EndTS:</th>
                <td width="80%">
                    @Html.TextBoxWithCalendar("EndTS", null, new { Class = "input", Size = "40" }, "yy-mm-dd HH:mm:ss")
                    @Html.JQueryValidationMessage(j => j.Bind("EndTS").NotEmpty())
                </td>
            </tr>
            <!--  -->
            <tr>
                <th width="20%">Status:</th>
                <td width="80%">
                    @Html.TextBoxFor(m => Model.Status, new { Class = "input", Size = "40" })
                    @Html.JQueryValidationMessage(j => j.Bind("Status").NotEmpty().Min(0).Max(1))
                    0为开启，1为已过期
                </td>
            </tr>
            <!--  -->
            <tr style="display:none;">
                <th width="20%">Min:</th>
                <td width="80%">
                    @Html.TextBoxFor(m => Model.Min, new { Class = "input", Size = "40" })
                    @Html.JQueryValidationMessage(j => j.Bind("Min").NotEmpty().Number())
                </td>
            </tr>
            <!--  -->
            <tr style="display:none;">
                <th width="20%">Max:</th>
                <td width="80%">
                    @Html.TextBoxFor(m => Model.Max, new { Class = "input", Size = "40" })
                    @Html.JQueryValidationMessage(j => j.Bind("Max").NotEmpty().Number())
                </td>
            </tr>
            <!--  -->
            <tr style="display:none;">
                <th width="20%">WeaponID:</th>
                <td width="80%">
                    @Html.TextBoxFor(m => Model.WeaponID, new { Class = "input", Size = "40" })
                    @Html.JQueryValidationMessage(j => j.Bind("WeaponID").NotEmpty().Number())
                </td>
            </tr>
            <!--  -->
            <tr>
                <th width="20%">RandNum:</th>
                <td width="80%">
                    @Html.TextBoxFor(m => Model.RandNum, new { Class = "input", Size = "40" })
                    @Html.JQueryValidationMessage(j => j.Bind("RandNum").NotEmpty().Max(100).Min(1))
                </td>
            </tr>
            <tr>
                <th>&nbsp;</th>
                <td height="50" class="clear-form-td">
                    <input type="submit" class="bt-big" name="button2" id="button2" value="提  交" />
                    <input type="button" name="goback" class="bt-big" value="返  回" onclick="javascript:history.go(-1);" />
                </td>
            </tr>
            <!------------>
        </table>

    }

</div>
<!--- data ed --->
@Html.Foot()

